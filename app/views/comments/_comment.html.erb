<div class="media">
  <% if comment.user %>
    <div class="media-left">
     <%= image_tag(comment.user.avatar.small.url, class: "media-object") if comment.user.avatar? %>
    </div>
  <% end %>
  <div class="media-body">
    <small>
      <%= comment.user.name  if comment.user %> commented <%= time_ago_in_words(comment.created_at) %> ago
      <% if policy(comment).destroy? %>
        | <%= link_to "Delete", [@post, comment], method: :delete %>
      <% end %>
    </small>
    <p><%= comment.body %></p>
  </div>
</div>